# =============================================================================
# SHARED CONFIGURATION (Required for both SQLite and PostgreSQL)
# =============================================================================

# Application
APP_NAME="SENAMHI Tracker"
APP_VERSION="0.1.0"

# Debug
DEBUG=True
DB_ECHO=False

# SENAMHI URLs
SENAMHI_BASE_URL=https://www.senamhi.gob.pe
SENAMHI_FORECAST_URL=https://www.senamhi.gob.pe/?p=pronostico-meteorologico
SENAMHI_WARNINGS_API=https://www.senamhi.gob.pe/app_senamhi/sisper/api/avisoMeteoroCabEmergencia
SENAMHI_GEOSERVER_URL=https://idesep.senamhi.gob.pe/geoserver/g_aviso/ows

# Scraping Configuration
SCRAPE_DELAY=2.0
REQUEST_TIMEOUT=30
USER_AGENT=SENAMHI-Tracker/0.1.0 (Educational Project)

# Departments Configuration
SCRAPE_ALL_DEPARTMENTS=True
# DEPARTMENTS=LIMA,CUSCO,AREQUIPA

# Scheduler Configuration
ENABLE_SCHEDULER=False
SCHEDULER_START_IMMEDIATELY=True
LOG_FILE=logs/scheduler.log
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60

# Scheduler Intervals (hours)
FORECAST_SCRAPE_INTERVAL=24
WARNING_SCRAPE_INTERVAL=6

# Web Server
WEB_HOST=127.0.0.1
WEB_PORT=5001
WEB_DEBUG=True

# =============================================================================
# SQLITE CONFIGURATION (Default - Simple deployment, no geospatial features)
# =============================================================================

DATABASE_URL=sqlite:///./data/weather.db

# =============================================================================
# POSTGRESQL + POSTGIS CONFIGURATION (Optional - Enables geospatial features)
# Uncomment this section and comment out SQLite section above to use PostgreSQL
# =============================================================================

# DATABASE_URL=postgresql://senamhi_user:senamhi_pass@localhost:5433/senamhi

# PostgreSQL Connection Details (for Docker)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5433
# POSTGRES_USER=senamhi_user
# POSTGRES_PASSWORD=senamhi_pass
# POSTGRES_DB=senamhi
